cmake_minimum_required(VERSION 3.4)
project(vulkan_play)
set(VULKAN_SDK_PATH "~/projects/VulkanSDK/1.0.65.0/x86_64")
set(PKG_CONFIG_HACK "-L/usr/local/lib -lglfw3 -lrt -lm -ldl -lXrandr -lXinerama -lXext -lXcursor -lXrender -lXfixes -lX11 -lpthread -lxcb -lXau -lXdmcp") # pkg-config --static --libs glfw3
set(LDFLAGS "-L${VULKAN_SDK_PATH}/lib ${PKG_CONFIG_HACK} -lvulkan")

set(CMAKE_CXX_STANDARD 14)
set(CMAKE_EXE_LINKER_FLAGS ${LDFLAGS})
include_directories("${VULKAN_SDK_PATH}/include")

set(SOURCE_FILES main.cpp)

add_executable(vulkan_play ${SOURCE_FILES})
